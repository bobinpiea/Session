{# templates/categorie/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}

    <div class="bloc-titre-page">
        <h1>Gestion des Catégories</h1>
        <h2>Liste • Ajout • Modification • Suppression des catégories du catalogue</h2>
    </div>

    <div class="tableau-k"> 
        <p class="titre-tableau">📚 Liste des Catégories ({{ categories|length }})</p>

        <table>
            <thead>
                <tr>
                    <th>Nom de la catégorie</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for categorie in categories %}
                    <tr>
                        <td>{{ categorie.nom }}</td>
                        <td>
                            <a href="{{ path('show_categorie', {'id': categorie.id}) }}">👁️</a>
                            <a href="">✏️</a>
                            <a href="">🗑️</a>  
                            {# à compléter plus tard #}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}