{% extends 'base.html.twig' %} 

{% block title %} Liste des Sessions {% endblock %}

{% block body %}

    <div>
        <h1>📚 Gestion des Sessions</h1>
        <h2> Liste • Ajout • Modification • Suppression des sessions de formation</h2>
    </div>

<p> <b> 📋 Liste des sessions   ({{ sessions|length }})</b> </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Intitulé Session</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Session(s) Passée(s) </th>
                <th>Session(s) en cours</th>
                <th>Session(s) à venir</th>
                <th>Détails programme</th>
            </tr>
        </thead>
        <tbody>
            {% for session in sessions %}
                <tr>
                    <td>{{ session.nom }}</td>
                    <td>{{ session.dateDebut|date('d/m/Y') }}</td>
                    <td>{{ session.dateFin|date('d/m/Y') }}</td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td>
                        <a href="{{ path('show_session', {id: session.id}) }}">👁️</a>
                        <a href="">✏️</a>
                        <a href="">🗑️</a>  
                        {# a Completer plus tard #}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>



{% endblock %}
