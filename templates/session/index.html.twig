{% extends 'base.html.twig' %} 

{% block title %} Liste des Sessions {% endblock %}

{% block body %}

    <div class="bloc-titre-page">
        <h1>📚 Gestion des Sessions</h1>
        <h2> Liste • Ajout • Modification • Suppression des sessions de formation</h2>
    </div>

    <!-- Sessions passées -->
    <div class="tableau-k">
       
        <p class="titre-tableau">📋 Sessions Passées ( {{ sessionsPassees|length }} )</p>
       
        <table>
            <thead>
                <tr>
                    <th>Intitulé</th>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                    <th>Détails</th>
                </tr>
            </thead>
           
            <tbody>
                {% for session in sessionsPassees %}
                    <tr>
                        <td>{{ session.nom }}</td>
                        <td>{{ session.dateDebut|date('d/m/Y') }}</td>
                        <td>{{ session.dateFin|date('d/m/Y') }}</td>
                        <td><a href="{{ path('show_session', {id: session.id}) }}">👁️</a>
                            <a href="">✏️</a>
                            <a href="">🗑️</a>  
                            {# à compléter plus tard #}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!--  Sessions en cours -->
    <div class="tableau-k">
       
        <p class="titre-tableau">📘 Sessions en cours ({{ sessionsEnCours|length }})</p>
       
        <table>

            <thead>
                <tr>
                    <th>Intitulé</th>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                    <th>Détails</th>
                </tr>
            </thead>
          
            <tbody>
                {% for session in sessionsEnCours %}
                    <tr>
                        <td>{{ session.nom }}</td>
                        <td>{{ session.dateDebut|date('d/m/Y') }}</td>
                        <td>{{ session.dateFin|date('d/m/Y') }}</td>
                        <td><a href="{{ path('show_session', {id: session.id}) }}">👁️</a>
                            <a href="">✏️</a>
                            <a href="">🗑️</a>  
                            {# à compléter plus tard #}                     
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        
        </table>
    </div>

    <!--  Sessions à venir -->
    <div class="tableau-k">

        <p class="titre-tableau">📗 Sessions à venir ({{ sessionsAVenir|length }})</p>

        <table>
            <thead>
                <tr>
                    <th>Intitulé</th>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                    <th>Détails</th>
                </tr>
            </thead>

            <tbody>
                {% for session in sessionsAVenir %}
                    <tr>
                        <td>{{ session.nom }}</td>
                        <td>{{ session.dateDebut|date('d/m/Y') }}</td>
                        <td>{{ session.dateFin|date('d/m/Y') }}</td>
                        <td><a href="{{ path('show_session', {id: session.id}) }}">👁️</a>
                            <a href="">✏️</a>
                            <a href="">🗑️</a>  
                            {# à compléter plus tard #}                        
                        </td>
                    </tr>
                {% endfor %}
            </tbody>

        </table>
        
    </div>

{% endblock %}